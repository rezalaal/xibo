<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ theme.getThemeConfig("theme_title") }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="token" content="{{ csrfToken }}"/>
    <link rel="shortcut icon" href="{{ theme.uri("img/favicon.ico") }}" />

    <link href="{{ theme.uri("libraries/bootstrap/css/bootstrap.min.css") }}" rel="stylesheet" media="screen">
    <link href="{{ theme.uri("libraries/bootstrap/css/bootstrap-theme.min.css") }}" rel="stylesheet" media="screen">

    <!-- Copyright 2006-2018 Spring Signage Ltd. Part of the Xibo Open Source Digital Signage Solution. Released under the AGPLv3 or later. -->
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-forgot-password {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-forgot-password .form-forgot-password-heading,
        .form-forgot-password .checkbox {
            margin-bottom: 10px;
        }
        .form-forgot-password input[type="text"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
        .login-logo {
            width: 200px;
        }

        #submit {
            margin-top: 10px;
        }

    </style>
</head>
<body>
    <div class="container">
        <form id="login-form" class="form-forgot-password text-center" action="{{ urlFor("forgot-password") }}" method="post">
            <input name="priorRoute" type="hidden" value="{{ flash.priorRoute }}" />
            <input type="hidden" name="{{ csrfKey }}" value="{{ csrfToken }}" />
            <p><a href="{{ theme.getThemeConfig("theme_url") }}"><img class="login-logo" src="{{ theme.uri("img/xibologo.png") }}"></a></p>

            <p>{% trans "Please enter your email address so we can send you an email to reset your password." %}</p>

            <input id="email" class="form-control input-block-level" name="email" type="email" placeholder="{% trans "Email Address" %}" autofocus>

            {% if flash.forgot_password_message %}
            <div class="alert alert-danger">{{ flash.forgot_password_message }}</div>
            {% endif %}

            <button id="submit" class="btn btn-large btn-primary" type="submit">{% trans "Submit" %}</button>
        </form>
        
        <p class="text-center">{% trans %}Version {{ version }}{% endtrans %}
            | <a id="source-link" href="{{ theme.getThemeConfig("cms_source_url") }}">{% trans "Source" %}</a>
            | <a id="about-link" class="XiboFormButton" href="{{ urlFor("about") }}" title="{% trans "About" %}">{% trans "About" %}</a>
            | <a id="login" class="XiboFormButton" href="{{ urlFor("login") }}" title="{% trans "login" %}">{% trans "login" %}</a>
        </p>
    </div> <!-- /container -->
    <script src="{{ theme.uri("libraries/jquery/jquery-1.11.1.min.js") }}"></script>
    <script src="{{ theme.uri("libraries/bootstrap/js/bootstrap.min.js") }}"></script>
</body>
</html>